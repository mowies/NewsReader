<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/colorselector_list_item"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btn_show_children"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_dots_white"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/message_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btn_show_children"
        android:text="Das ist ein sehr sehr sehr langer Betreff als Test ob das Ellipsize-Verhalten passt"
        android:textColor="@color/black"
        android:lines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp" />


    <TextView
        android:id="@+id/message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="05.05.2015, 10:04"
        android:textColor="@color/light_blue"
        android:layout_below="@id/message_title"
        android:layout_toLeftOf="@id/btn_show_children"
        android:lines="1"
        android:ellipsize="none"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/message_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monika Schrenk"
        android:layout_below="@id/message_title"
        android:layout_toLeftOf="@id/message_date"
        android:layout_alignParentLeft="true"
        android:lines="1"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp" />



</RelativeLayout>